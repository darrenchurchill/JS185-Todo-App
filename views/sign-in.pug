extends layout

block main
  form(action="/users/signin", method="post")
    dl
      dt
        label(for="username") Username:
      dd
        input(
          type="text",
          id="username",
          name="username",
          placeholder="username",
          value=username,
          required
        )
      dt
        label(for="password") Password:
      dd
        input(
          type="password",
          id="password",
          name="password",
          placeholder="password",
          required
        )
    fieldset.actions
      input(type="submit" value="Save")
      a(href="/lists") Cancel

