doctype html

html(lang="en-US")

  head
    title Todo App
    meta(charset="UTF-8")
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=PT+Sans")
    link(rel="stylesheet", href="/stylesheets/whitespace-reset.css")
    link(rel="stylesheet", href="/stylesheets/application.css")
    script(src="/javascripts/application.js")

  body
    header
      h1 Todo Tracker
      block headerLinks

    main
      if messages && Object.keys(messages).length > 0
        ul
          each msgType in Object.keys(messages)
            each msg in messages[msgType]
              li.flash(class=msgType)
                p= msg

      block main

    block footer
      if user
        footer
          form(action="/users/signout" method="post")
            fieldset.actions
              p= `Signed in as ${user.username}`
              button Sign Out
