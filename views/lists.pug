extends layout

block headerLinks
  if user
    .actions
      a.add(href="/lists/new") New list

block main
  if user && (todoLists === undefined || todoLists.length === 0)
    p#no_list You don't have any todo lists. Why not create one?
  else
    ul#lists
      each todoList in todoLists
        li(class=todoList.done ? "done": "")
          a(href=`/lists/${todoList.id}`)
            h2= todoList.title
            p #{todoList.countDone} / #{todoList.length}
